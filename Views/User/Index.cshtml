@model IEnumerable<Groupon.Models.Entity.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>User Lists</h2>

<p>
    <a href="/User/create" class="btn btn-success">Add</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            <a href="/User/Edit/@item.UserID" class="btn btn-primary">Edit</a>
            <a href="/User/Delete/@item.UserID" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
