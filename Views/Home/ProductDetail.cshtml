@model Groupon.Models.Entity.Product

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->

            @Html.Action("Sidebar", "Home")
            <!-- Sidebar end=============================================== -->
            <div class="span9">

                <div class="row">
                <div id="gallery" class="span3">
                    <a href="" title="Fujifilm FinePix S2950 Digital Camera">
                        <img src="@Model.Image" style="width:100%" alt="Fujifilm FinePix S2950 Digital Camera" />
                    </a>
                 
                    
                </div>
                <div class="span6">
                    <h3>@Model.Title  </h3>
                 
                    <hr class="soft" />
                    <form class="form qtyFrm">
                        <div class="control-group">
                            <label class="control-label"><span><strong>Price :</strong> @Model.Price TL</span></label>
                            <div class="controls">
                               
                         
                                   
                               <a class="btn btn-large btn-primary pull-right" href="/Cart/AddToCart/@Model.ProductID">Add to Cart</a>


                            </div>
                        </div>
                    </form>

                    <hr class="soft" />
                    <h4>@Model.Stock in stock</h4>
                
                    <hr class="soft clr" />
                    <p>
                        @Html.Raw(Model.Description)

                    </p>
                 
                    <br class="clr" />
                    <a href="#" name="detail"></a>
                    <hr class="soft" />
                </div>


            </div>
        </div>
    </div>
</div>

