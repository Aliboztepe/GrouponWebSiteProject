@model Groupon.Models.Entity.About
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            
            <div class="span12">

                
                <hr class="soft" />
                <div  style="text-align:center" id="legalNotice">
                    <h3 style="text-align:center">@Model.Title</h3><br />


                    <p>
                        @Html.Raw(Model.Description)
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>





























