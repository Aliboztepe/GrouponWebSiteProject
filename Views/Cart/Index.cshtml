@model Groupon.Models.Entity.Cart
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="mainBody">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 style="text-align:center">Cart</h2>
                <hr />
                @if (Model.CartLines.Count > 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Quantity</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Sub Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartLines)
                            {
                                <tr>
                                    <td><img style="width:70px;height:100px" src="@item.Product.Image" alt="" /></td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Product.Title</td>
                                    <td>@item.Product.Price</td>
                                    <td>@((item.Product.Price * item.Quantity).ToString("c"))</td>
                                    <td><a class="btn btn-large btn-danger pull-right" href="/Cart/RemoveFromCart/@item.Product.ProductID">Delete</a></td>
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                        <td colspan="5"></td>
                        <td>@Model.Total().ToString("c")</td>
                        </tfoot>
                    </table>


                }
                else
                {
                    <div style="text-align:center" class="alert alert-warning" role="alert">
                        You have no products in cart.
                    </div>
                }
                <center>
                    <a href="/" class="btn btn-primary"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Continue Shopping</a>
           
                @if (Model.CartLines.Count > 0)
                {


                    <a href="/Cart/Checkout" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true"></i>Complete Order</a>



                }
                </center>
            </div>

        </div>
    </div>
</div>
<div>
    <hr />
</div>

